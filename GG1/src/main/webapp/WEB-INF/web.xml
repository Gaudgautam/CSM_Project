<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	version="3.1">
	<!-- Login Controller Mapping -->
	<servlet>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>controller.LoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/LoginController</url-pattern>
	</servlet-mapping>

	<!-- Signup Controller Mapping -->
	<servlet>
		<servlet-name>SignupController</servlet-name>
		<servlet-class>controller.SignupController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignupController</servlet-name>
		<url-pattern>/SignupController</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>CreateCustomerServlet</servlet-name>
		<servlet-class>com.example.controller.CreateCustomerServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CreateCustomerServlet</servlet-name>
		<url-pattern>/createCustomer</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>AddOrderServlet</servlet-name>
		<servlet-class>com.example.AddOrderServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AddOrderServlet</servlet-name>
		<url-pattern>/addOrder</url-pattern>
	</servlet-mapping>
</web-app>